{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Backend",
        "program": "${workspaceFolder}/backend/index.js",
        "cwd": "${workspaceFolder}/backend",
        "console": "integratedTerminal",
        "env": {
          "PORT": "3001"
        }
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Frontend",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/frontend/src",
        "sourceMaps": true,
        "trace": true
      }
    ]
  }
  